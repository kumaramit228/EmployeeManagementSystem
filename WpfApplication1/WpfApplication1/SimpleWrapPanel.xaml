<Window x:Class="WpfApplication1.SimpleWrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="SimpleWrapPanel" Height="323" Width="284">
    <WrapPanel Background="LightSteelBlue" ItemHeight="30" ItemWidth="200">
        <Label Name="lblInstructions" Width="328" Height="27" FontSize="15" Content="Enter name"/>
        <Label Name="lblMake" Content="Make"></Label>
        <TextBox Name="TxtMake" Width="193" Height="25"></TextBox>
        <Label Name="lblColor" Content="Color"></Label>
        <TextBox Name="txtColor" Width="193" Height="25" />
        <Label Name="lblPetName" Content="Pet Name" />
        <TextBox Name="txtPetName" Width="193" Height="25"/>
        <Button Name="btnOk" Width="80" Content="OK" />
    </WrapPanel>
</Window>
