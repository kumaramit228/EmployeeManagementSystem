<Page x:Class="WpfApplication1.StackProperties"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StackProperties">

    <Grid>
        <Grid>
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Top">Label</Label>
                <Button Padding="15" Margin="10" VerticalAlignment="Bottom">
                    Button
                </Button>
                <Button Height="200" Width="50" MaxWidth="150" VerticalAlignment="Center">Button 2
                </Button>
                <Button VerticalAlignment="Stretch">Button 3</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
