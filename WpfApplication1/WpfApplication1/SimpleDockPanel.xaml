<Window x:Class="WpfApplication1.SimpleDockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="SimpleDockPanel" Height="300" Width="300">
    <DockPanel>
        <Label DockPanel.Dock="Top" Name="lblInstruction" FontSize="15"
               Content="Enter car Information" />
        <Label DockPanel.Dock="Left" Name="lblMake" Content="Make" />
        <Label DockPanel.Dock="Bottom" Name="lblColor" Content="Color" />
        <Label DockPanel.Dock="Right" Name="lblPetName" Content="Pet Name" />
        <Button Name="btnOk" Content="OK" />
    </DockPanel>
</Window>
