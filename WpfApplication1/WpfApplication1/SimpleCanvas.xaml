<Window x:Class="WpfApplication1.SimpleCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="SimpleCanvas" Height="285" Width="325">
    <Canvas Background="LightBlue">
        <Button Name="btnOk" Canvas.Left="121" Canvas.Top="201" Width="80" Content="OK" />
        <Label Name="lblInstructions" Canvas.Left="17" Canvas.Top="10"
               Width="270" Height="31" FontSize="15"
               Content="Enter Car Information" />
        <Label Name="lblMake" Canvas.Left="17" Canvas.Top="60" Content="Make" Width="70" />
        <TextBox x:Name="textBox" Height="26" Canvas.Left="133" TextWrapping="Wrap" Canvas.Top="60" Width="154"/>
        <Label x:Name="label" Content="Color" Canvas.Left="17" Canvas.Top="104" Width="70"/>
        <TextBox x:Name="textBox1" Height="26" Canvas.Left="133" TextWrapping="Wrap" Canvas.Top="104" Width="154"/>
        <Label x:Name="label1" Content="Pet name" Canvas.Left="17" Canvas.Top="147" Width="70"/>
        <TextBox x:Name="textBox2" Height="23" Canvas.Left="133" TextWrapping="Wrap" Canvas.Top="147" Width="154"/>
    </Canvas>
</Window>
